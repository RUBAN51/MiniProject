<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/for_gradient">


    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="Lost Thing?"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/lostthing"
        android:layout_width="160dp"
        android:layout_height="45dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/spinner_cust"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <LinearLayout
        android:id="@+id/linearLayoutContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">
        <!-- EditText fields will be dynamically added here -->
        <EditText
            android:id="@+id/ED1"
            android:layout_width="210dp"
            android:layout_height="45dp"
            android:hint="Hint1"
            android:background="@drawable/cutomized_edittext"
            tools:layout_editor_absoluteX="101dp"
            tools:layout_editor_absoluteY="218dp" />
        <EditText
            android:id="@+id/ED2"
            android:layout_width="210dp"
            android:layout_height="45dp"
            android:hint="Hint2"

            android:background="@drawable/cutomized_edittext"
            tools:layout_editor_absoluteX="101dp"
            tools:layout_editor_absoluteY="218dp" />
        <EditText
            android:id="@+id/ED3"
            android:layout_width="210dp"
            android:layout_height="45dp"
            android:hint="Hint3"

            android:background="@drawable/cutomized_edittext"
            tools:layout_editor_absoluteX="101dp"
            tools:layout_editor_absoluteY="218dp" />
        <EditText
            android:id="@+id/ED4"
            android:layout_width="210dp"
            android:layout_height="45dp"
            android:hint="Hint4"

            android:background="@drawable/cutomized_edittext"
            tools:layout_editor_absoluteX="101dp"
            tools:layout_editor_absoluteY="218dp" />
        <EditText
            android:id="@+id/ED5"
            android:layout_width="210dp"
            android:layout_height="45dp"
            android:hint="Hint5"

            android:background="@drawable/cutomized_edittext"
            tools:layout_editor_absoluteX="101dp"
            tools:layout_editor_absoluteY="218dp" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>