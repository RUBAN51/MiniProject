<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/for_gradient"
    tools:context=".CreateAccountPage">


    <Button
        android:id="@+id/back2"
        android:layout_width="55dp"
        android:layout_height="47dp"
        android:background="@drawable/cutomized_back_button"
        android:backgroundTintMode="add"
        android:clickable="true"
        android:text="Back"
        android:textAlignment="center"
        android:textColor="#FBFBFB"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.044"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023" />

    <TextView
        android:id="@+id/createText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:text="Register Here"
        android:textAlignment="center"
        android:textColor="#F3EDED"
        android:textSize="29sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.525"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/secField"
        android:layout_width="210dp"
        android:layout_height="45dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/cutomized_edittext"
        android:ems="10"
        android:hint="Section"
        android:inputType="text"
        android:textColor="#FAF8F8"
        android:textColorHint="#F3EFEF"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.517"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/deptField" />

    <EditText
        android:id="@+id/regPass"
        android:layout_width="210dp"
        android:layout_height="45dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/cutomized_edittext"
        android:ems="10"
        android:fontFamily="sans-serif-light"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColor="#F4EBEB"
        android:textColorHint="#EDE9E9"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.514"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/regNo" />

    <EditText
        android:id="@+id/deptField"
        android:layout_width="210dp"
        android:layout_height="45dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/cutomized_edittext"
        android:ems="10"
        android:hint="Department"
        android:inputType="text"
        android:textAlignment="textStart"
        android:textColor="#F6F3F3"
        android:textColorHint="#FBF7F7"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.517"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/regRepass" />

    <EditText
        android:id="@+id/regRepass"
        android:layout_width="210dp"
        android:layout_height="45dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/cutomized_edittext"
        android:ems="10"
        android:hint="Re-type password"
        android:inputType="textPassword"
        android:textColor="#F6EFEF"
        android:textColorHint="#F4F2F2"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.514"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/regPass" />

    <EditText
        android:id="@+id/regNo"
        android:layout_width="210dp"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/cutomized_edittext"
        android:fontFamily="sans-serif-light"
        android:hint="Register No."
        android:inputType="number"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textColor="#F4EDED"
        android:textColorHint="#FBFAFA"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.514"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/createText" />

    <Button
        android:id="@+id/createAcc2"
        android:layout_width="190dp"
        android:layout_height="40dp"
        android:background="@drawable/customize_button"
        android:text="CREATE ACCOUNT"
        android:textAlignment="center"
        android:textColor="#F6EFEF"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rollField"
        app:layout_constraintVertical_bias="0.129" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="20dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="20dp" />

    <EditText
        android:id="@+id/rollField"
        android:layout_width="210dp"
        android:layout_height="45dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/cutomized_edittext"
        android:ems="10"
        android:hint="Roll Number"
        android:inputType="number"
        android:textColor="#F4F1F1"
        android:textColorHint="#F8F0F0"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.517"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/secField" />

</androidx.constraintlayout.widget.ConstraintLayout>

